{
  "json": {
    "associations": ["**/*.{json5}"]
  },
  "markdown": {},
  "typescript": {
    "quoteStyle": "preferSingle",
    "useBraces": "always",
    "module.sortImportDeclarations": "maintain",
    "module.sortExportDeclarations": "maintain",
    "importDeclaration.sortNamedImports": "maintain",
    "exportDeclaration.sortNamedExports": "maintain"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "includes": ["**/*.{json,json5,ts,cjs,js,mjs,md,yml}"],
  "excludes": [".git", "lib", "bin", ".ameba.yml"],
  "plugins": [
    "https://plugins.dprint.dev/json-0.17.0.wasm",
    "https://plugins.dprint.dev/markdown-0.15.1.wasm",
    "https://plugins.dprint.dev/typescript-0.80.1.wasm",
    "https://plugins.dprint.dev/prettier-0.15.0.json@ff80be22d9d596d17a1ca0767e2cbdddd518cf7d23773045ab90d12dfc63f5d5"
  ]
}
